<p id="notice"><%= notice %></p>

<h2><%= bulletin_name params[:bulletin_id] %></h2>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan="3">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', [post.bulletin, post] , class:'btn btn-default' %>
          <%= link_to 'Edit', edit_bulletin_post_path(post.bulletin,post) , class:'btn btn-default'%>
          <%= link_to 'Destroy', [post.bulletin,post], method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-default'%></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_bulletin_post_path, class:'btn btn-default' %>
